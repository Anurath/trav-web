<% layout("/layouts/boilerPlate.ejs") -%>
<div class=" login-container mt-5">
    <div class="row signupPage  mt-3">
        <h1 class="col-6 offset-3 d-flex align-item-center justify-content-center">SignUp on Wonderlust</h1>
        <div class="col-6 offset-3">
            <form method="POST" action="/signup" class="needs-validation" novalidate>

                <label for="username" class="form-label">Username</label>
                <input required type="text" name="username"  class="form-control">
                <div class="valid-feedback">Username looks good</div>

                <label for="email" class="form-label">Email</label>
                <input required type="email" name="email"  class="form-control">

                <label for="password" class="form-label">Password</label>
                <input required type="password" name="password"  class="form-control">

                <div class="d-flex align-item-center justify-content-center mb-3"><button class="btn btn-success mt-3">SignUp</button></div>
            </form>
        </div>
    </div>
</div>