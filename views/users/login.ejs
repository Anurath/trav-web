<% layout("/layouts/boilerPlate.ejs") -%>
    <div class="login-container mt-5">
        <div class="row loginpage  mt-3">
            <h1 class="col-6 offset-3 d-flex align-item-center justify-content-center">Login</h1>
            <div class="col-6 offset-3">
                <form method="POST" action="/login" class="needs-validation" novalidate>
    
                    <label for="username" class="form-label">Username</label>
                    <input required type="text" name="username"  class="form-control">
    
                    <label for="password" class="form-label">Password</label>
                    <input required type="password" name="password"  class="form-control">
    
                    <div class="d-flex align-item-center justify-content-center"><button class="btn btn-success mt-3 mb-3 ">Login</button></div>
                </form>
            </div>
        </div>
    </div>